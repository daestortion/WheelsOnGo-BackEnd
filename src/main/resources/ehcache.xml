<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache alias="com.respo.respo.Entity.VerificationEntity">
        <expiry>
            <ttl unit="minutes">30</ttl> <!-- Cache for 30 minutes -->
        </expiry>
        <heap unit="entries">1000</heap> <!-- Store up to 1000 entries in the heap -->
    </cache>

</config>
